<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <% unless @user.place.nil? || @user.place.empty? %>
            @<%= @user.place %>
        <% end %>
      </h1>
      <br>
      <%= link_to "Follow",   followings_user_path(@user) if logged_in? %>
      <%= link_to "Follower", followers_user_path(@user) if logged_in? %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>
